<script>
    function scrollAndRedirect(target) {
        event.preventDefault();
        var infoParrafo = document.getElementById('info_parrafo');
		var info_h1 = document.getElementById('info_h1')

        // Remover la clase si ya está presente
        if (infoParrafo.classList.contains('animate-spin')) {
            infoParrafo.classList.remove('animate-spin');
        }
		if (info_h1.classList.contains('animate-jump')){
			info_h1.classList.remove('animate-jump');
		}

        // Agregar la clase para activar la animación
        infoParrafo.classList.add('animate-spin');
		info_h1.classList.add('animate-jump');

        // Redirigir a la URL especificada en el parámetro sin cambiar la ubicación de la página actual
        setTimeout(function () {
            window.location.replace(target);
        }, 10); // Cambia 1000 a la duración de tu animación en milisegundos
    }

    document.getElementById('id_scroll_b').addEventListener('click', function () {
        scrollAndRedirect('#info_h1');
    });
</script>

