---
interface Props{
    class?:string
    title:string
    subtitle?:string
} 

const {title, subtitle}=Astro.props;
---
<article id="bento_marco" class={`${Astro.props.class} col-span-5 reltive rounded-xl backdrop-blur-md border border-black/10 shadow-inner shadow-white/10`}>
    
    <slot name="bento_img"></slot>

    <div class="select-none flex flex-col gap-1 p-6 text-lg z-20">
        <h2 class="text-3xl font-semibold text-balance text-white">{title}</h2>
        {subtitle && <h3>{subtitle}</h3>}
    </div>
    <slot name="bento_content"></slot>
</article>

